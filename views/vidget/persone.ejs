<% if (persone) { %>
    <section class="persone-block">
        <h2 class="persone-block__title">
            Персона
        </h2>
        <% persone.forEach(function (item) { %>
            <div class="container">
                <div class="row">
                        <div class="col-md-6">
                            <h3><%= item.title %></h3>
                            <p><%= item.body %></p>
                        </div>
                        <div class="col-md-6">
                            <p><%= item.image %></p>
                        </div>
                </div>
            </div>
        <% }); %>
    </section>
<% } %>